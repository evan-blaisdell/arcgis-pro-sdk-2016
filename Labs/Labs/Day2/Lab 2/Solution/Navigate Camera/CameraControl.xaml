<UserControl x:Class="NavigateCamera.CameraControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cameraHeading="clr-namespace:NavigateCamera"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >
    <UserControl.Resources>
        <cameraHeading:ValueAngleConverter x:Key="valueAngleConverter"/>
        <cameraHeading:ValueTextConverter x:Key="valueTextConverter"/>

        <Style TargetType="{x:Type RepeatButton}" BasedOn="{StaticResource {x:Type RepeatButton}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                <ContentPresenter Margin="2" HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}" Content="{TemplateBinding ContentControl.Content}" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Height="66" Width="Auto" UseLayoutRounding="True">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <RepeatButton Grid.Row="0" Grid.Column="0" Command="{Binding Path=ZoomInCmd}">
            <RepeatButton.Content>
                <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="pack://application:,,,/NavigateCamera;component/Images/GenericAdd16.png"/>
            </RepeatButton.Content>
        </RepeatButton>
        <RepeatButton Grid.Row="1" Grid.Column="0" Command="{Binding Path=ZoomOutCmd}">
            <RepeatButton.Content>
                <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="pack://application:,,,/NavigateCamera;component/Images/GenericSubtract16.png"/>
            </RepeatButton.Content>
        </RepeatButton>
        <Slider Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Height="60" Name="CameraHeadingControl" Value="{Binding Path=HeadingValue, UpdateSourceTrigger=Explicit}" Minimum="0" Maximum="360" IsEnabled="{Binding IsCameraEnabled}" >            
            <Slider.Template>
                <ControlTemplate>
                    <Viewbox>
                        <Canvas Width="300" Height="300">
                            <Ellipse Fill="{DynamicResource Esri_Blue2}" Width="300" Height="300" Canvas.Left="0" Canvas.Top="0" 
                Stroke="{DynamicResource Esri_Gray155}" StrokeThickness="6"
                MouseLeftButtonUp="Polygon_MouseLeftButtonUp"
                MouseMove="Polygon_MouseMove"/>
                            <Canvas>
                                <Line Stroke="{DynamicResource Esri_Gray155}" StrokeThickness="10" X1="150" Y1="150" X2="150" Y2="10"
                MouseLeftButtonUp="Polygon_MouseLeftButtonUp"/>
                                <Polygon Fill="{DynamicResource Esri_Gray155}" Stroke="{DynamicResource Esri_Gray155}" Points="30,0 0,70 60,70" Canvas.Left="120" Canvas.Top="0" 
                MouseLeftButtonDown="Polygon_MouseLeftButtonDown"
                    MouseLeftButtonUp="Polygon_MouseLeftButtonUp">
                                    <Polygon.ToolTip>
                                        <ToolTip>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                Path="Value" Converter="{StaticResource valueTextConverter}"/>
                                        </ToolTip>
                                    </Polygon.ToolTip>
                                </Polygon>
                                <Canvas.RenderTransform>
                                    <RotateTransform CenterX="150" CenterY="150">
                                        <RotateTransform.Angle>
                                            <MultiBinding Converter="{StaticResource valueAngleConverter}">
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Value"/>
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Minimum"/>
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Maximum"/>
                                            </MultiBinding>
                                        </RotateTransform.Angle>
                                    </RotateTransform>
                                </Canvas.RenderTransform>
                            </Canvas>
                            <Ellipse Fill="{DynamicResource Esri_Gray155}" StrokeThickness="0" Width="50" Height="50" Canvas.Left="125" Canvas.Top="125" MouseLeftButtonUp="ResetHeading"/>
                        </Canvas>
                    </Viewbox>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Slider.Template>
        </Slider>
        <RepeatButton Grid.Row="0" Grid.Column="2" Command="{Binding Path=PitchUpCmd}">
            <RepeatButton.Content>
                <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="pack://application:,,,/NavigateCamera;component/Images/GenericArrowUp16.png"/>
            </RepeatButton.Content>
        </RepeatButton>
        <RepeatButton Grid.Row="1" Grid.Column="2" Command="{Binding Path=PitchDownCmd}">
            <RepeatButton.Content>
                <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="pack://application:,,,/NavigateCamera;component/Images/GenericArrowDown16.png"/>
            </RepeatButton.Content>
        </RepeatButton>
    </Grid>

</UserControl>
